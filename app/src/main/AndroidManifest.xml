<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thecode.ortez">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logito"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logito"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.thecode.ortez.activities.RegisterActivity"
            android:theme="@style/BlackStatusBar"  />
        <activity
            android:name="com.thecode.ortez.activities.SplashscreenActivity"
            android:theme="@style/WhiteStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thecode.ortez.activities.AlternativeLoginActivity"
            android:theme="@style/BlackStatusBar" />
        <activity
            android:name="com.thecode.ortez.activities.EmailVerificationActivity"
            android:theme="@style/BlackStatusBar" />
        <activity
            android:name="com.thecode.ortez.activities.PhoneVerificationActivity"
            android:theme="@style/BlackStatusBar" />
        <activity
            android:name="com.thecode.ortez.activities.StartActivity"
            android:theme="@style/BlackStatusBar" />
        <activity
            android:name="com.thecode.ortez.activities.MainActivity"
            android:theme="@style/BlackStatusBar" />
    </application>

</manifest>